<div class="bs-example">
  <div id="myCarousel" class="carousel slide" data-interval="2000" data-ride="carousel">
     <!-- Carousel indicators -->
     <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
      <div class="active item">
          <%= image_tag "necklace2.jpg", width: 300 %>
          <div class="carousel-caption">
            <h2>Beauty inside and out.</h2>
          </div>
      </div>
      <div class="item">
          <%= image_tag "bracelet2.jpg", width: 300 %>
          <div class="carousel-caption">
              <h2>Redefine your image.</h2>
          </div>
      </div>
      <div class="item">
          <%= image_tag "earring5.jpg", width: 300 %>
          <div class="carousel-caption">
              <h2>A perfect pair.</h2>
          </div>
      </div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>
