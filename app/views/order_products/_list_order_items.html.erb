<div class="cart">
  <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Item</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% order.order_products.each do |item| %>
          <tr>
            <td><%= image_tag item.product.image, size: "64x64" %></td>
            <td><%= item.product.title %></td>
            <td>
              <%= simple_form_for item, url: update_order_path(order_item_id: item),  remote: true do |f| %>
              <%= f.input :quantity, label: false, as: :select, collection: (1..5) %>
              <%= f.submit "Update Cart" %>
              <% end %>
            </td>
            <td><%= number_to_currency item.product.price %></td>
            <td><%= number_to_currency item.total %></td>
          </tr>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><strong>Total</strong></td>
          <td><%= number_to_currency @order.total %> </td>
        </tr>
      </tbody>
  </table>
</div>
